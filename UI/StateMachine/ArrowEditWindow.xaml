<Window x:Class="sbid.UI.ArrowEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:sbid.UI"
        mc:Ignorable="d"
        Title="状态机连线编辑" Height="320" Width="500" 
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <StackPanel>
        <Grid Margin="10,5,10,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="10*"/>
                <ColumnDefinition Width="90*"/>
            </Grid.ColumnDefinitions>
            <TextBlock Grid.Column="0" Text="Gurad:" HorizontalAlignment="Left"/>
            <TextBox Grid.Column="1" Text="a=b AND c=d"/>
        </Grid>
        <TextBlock Text="Action:" Margin="10,10,0,0"/>
        <ListBox x:Name="listBox" Height="160" Margin="10,5"/>
        <TextBox Text="a=b AND c=d" Margin="10,5"/>
        <Grid Height="20" Margin="10,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="35*"/>
                <ColumnDefinition Width="10*"/>
                <ColumnDefinition Width="10*"/>
                <ColumnDefinition Width="5*"/>
            </Grid.ColumnDefinitions>
            <Button Grid.Column="1" Content="添加" Click="Button_Click" Width="60" HorizontalAlignment="Right"/>
            <Button Grid.Column="2" Content="删除" Click="Button_Click" Width="60" HorizontalAlignment="Right"/>
        </Grid>
    </StackPanel>
</Window>
